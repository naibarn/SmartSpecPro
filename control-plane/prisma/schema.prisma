generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())

  sessions  Session[]
}

model Session {
  id        String   @id @default(cuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  name      String?
  createdAt DateTime @default(now())

  iterations      Iteration[]
  tasks           Task[]
  reports         Report[]
  artifacts       Artifact[]
  testRuns        TestRun[]
  coverageRuns    CoverageRun[]
  securityChecks  SecurityCheck[]
  approvals       ApplyApproval[]
}

model Iteration {
  id        String   @id @default(cuid())
  sessionId String
  session   Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}

model Task {
  id                String     @id @default(cuid())
  sessionId          String
  session            Session    @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  dedupeKey          String
  taskId             String?
  title              String
  originatingSpec    String?
  acceptanceCriteria String?
  mappedFiles        String[]
  mappedTests        String[]
  status             TaskStatus @default(planned)
  notes              String?

  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@unique([sessionId, dedupeKey], name: "sessionId_dedupeKey")
}

enum TaskStatus {
  planned
  doing
  done
  blocked
}

model Report {
  id         String   @id @default(cuid())
  sessionId  String
  session    Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  iteration  Int?
  title      String
  kind       String
  artifactKey String
  summary    Json?
  createdAt  DateTime @default(now())
}

model Artifact {
  id         String   @id @default(cuid())
  sessionId  String
  projectId  String
  session    Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  key        String   @unique
  status     ArtifactStatus @default(pending)
  contentType String
  sizeBytes  Int
  sha256     String?
  createdAt  DateTime @default(now())
}

enum ArtifactStatus {
  pending
  complete
}

model TestRun {
  id         String   @id @default(cuid())
  sessionId  String
  session    Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  iteration  Int?
  passed     Boolean
  artifactKey String?
  summary    Json?
  createdAt  DateTime @default(now())
}

model CoverageRun {
  id         String   @id @default(cuid())
  sessionId  String
  session    Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  iteration  Int?
  percent    Float
  artifactKey String?
  summary    Json?
  createdAt  DateTime @default(now())
}

model SecurityCheck {
  id         String   @id @default(cuid())
  sessionId  String
  session    Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  iteration  Int?
  status     SecurityStatus @default(pass)
  artifactKey String?
  summary    Json?
  createdAt  DateTime @default(now())
}

enum SecurityStatus {
  pass
  fail
}

model ApplyApproval {
  id          String   @id @default(cuid())
  sessionId   String
  session     Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  tokenHash   String
  status      ApprovalStatus @default(issued)
  reason      String?
  issuedToSub String
  expiresAt   DateTime
  consumedAt  DateTime?

  createdAt   DateTime @default(now())
}

enum ApprovalStatus {
  issued
  consumed
  revoked
}

model AuditLog {
  id        String   @id @default(cuid())
  actorSub  String
  action    String
  projectId String?
  sessionId String?
  resource  String?
  metadata  Json?
  createdAt DateTime @default(now())
}
