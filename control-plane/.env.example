PORT=7070
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/smartspec?schema=public

# Minting tokens (server-to-server only)
CONTROL_PLANE_API_KEY=change_me_long_random

JWT_SECRET=change_me_long_random_at_least_16_chars
JWT_ISSUER=smartspec-control-plane
JWT_AUDIENCE=smartspec

# Gates
COVERAGE_MIN_PERCENT=70

# R2/S3 (Cloudflare R2)
R2_ENDPOINT=https://<accountid>.r2.cloudflarestorage.com
R2_REGION=auto
R2_BUCKET=smartspec-artifacts
R2_ACCESS_KEY_ID=...
R2_SECRET_ACCESS_KEY=...

R2_PRESIGN_EXPIRES_SECONDS=600
ARTIFACT_MAX_BYTES=10485760
ARTIFACT_ALLOWED_CONTENT_TYPES=application/json,text/plain,text/markdown,application/zip

# Rate limiting
RATE_LIMIT_MAX=300
RATE_LIMIT_TIME_WINDOW=60000
