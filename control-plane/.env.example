# Control Plane service
CONTROL_PLANE_HOST=0.0.0.0
CONTROL_PLANE_PORT=7070

# Must be at least 16 chars
CONTROL_PLANE_JWT_SECRET=change_me_to_a_long_random_secret

# Comma-separated API keys allowed to mint JWTs
CONTROL_PLANE_API_KEYS=dev-key-1,dev-key-2

# JWT lifetime (e.g. 15m, 1h, 24h)
CONTROL_PLANE_JWT_EXPIRES_IN=1h

# Postgres
DATABASE_URL=postgresql://smartspec:smartspec@localhost:5432/smartspec_control_plane?schema=public

# Cloudflare R2 (S3-compatible) â€” required for presigned artifact URLs
# Example endpoint: https://<accountid>.r2.cloudflarestorage.com
R2_ENDPOINT=https://<accountid>.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=change_me
R2_SECRET_ACCESS_KEY=change_me
R2_BUCKET=smartspec-artifacts
R2_REGION=auto

# Presigned URL expiry (seconds)
R2_PRESIGN_EXPIRES_SECONDS=900
