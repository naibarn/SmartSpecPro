# SmartSpecWeb - Example environment
NODE_ENV=development
PORT=3000

# Database (MySQL/TiDB) - matches docker-compose.yml settings
DATABASE_URL=mysql://smartspec:smartspec123@localhost:3306/smartspecweb

# Session auth
JWT_SECRET=change_me_to_a_long_random_secret
VITE_APP_ID=smartspecweb
OWNER_OPEN_ID=

# OAuth (Manus)
OAUTH_SERVER_URL=https://oauth.manus.im

# Upstream LLM proxy (SmartSpecWeb acts as a gateway)
BUILT_IN_FORGE_API_URL=https://forge.manus.im
BUILT_IN_FORGE_API_KEY=replace_me

# Bearer token auth for non-browser callers (LLM proxy -> website gateway / MCP)
SMARTSPEC_WEB_GATEWAY_TOKEN=replace_me_gateway_token
SMARTSPEC_MCP_TOKEN=replace_me_mcp_token

# Rate limits (in-memory). For multi-instance, enforce at gateway/redis.
WEB_LLM_RPM=120
WEB_LLM_MAX_BODY_BYTES=2097152
WEB_MCP_RPM=240

# Credit system configuration
WEB_LLM_MIN_CREDITS=1                    # Minimum credits required to make LLM request
WEB_LLM_CREDIT_PER_1K_TOKENS=0.1         # Credits charged per 1000 tokens
WEB_LLM_SKIP_CREDIT_FOR_STATIC=false     # Skip credit check for static tokens (server-to-server)

# Workspace tools
WORKSPACE_ROOT=./workspace
MCP_EXT_ALLOWLIST=.md,.txt,.json,.yaml,.yml,.ts,.tsx,.js,.py,.css,.html
MCP_MAX_READ_BYTES=1048576
MCP_MAX_WRITE_BYTES=1048576
MCP_REQUIRE_WRITE_TOKEN=1
MCP_WRITE_TOKEN=replace_me_write_token

# S3/R2 Storage (optional)
# S3_ACCESS_KEY_ID=
# S3_SECRET_ACCESS_KEY=
# S3_BUCKET=
# S3_REGION=auto
# S3_ENDPOINT=

# Stripe (for credit purchases)
# STRIPE_SECRET_KEY=
# STRIPE_WEBHOOK_SECRET=
