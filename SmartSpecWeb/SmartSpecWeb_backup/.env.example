# SmartSpecWeb - Example environment
NODE_ENV=development
PORT=3000

# Session auth
JWT_SECRET=change_me_to_a_long_random_secret
VITE_APP_ID=smartspecweb
OWNER_OPEN_ID=

# Upstream LLM proxy (SmartSpecWeb acts as a gateway)
BUILT_IN_FORGE_API_URL=http://localhost:8001
BUILT_IN_FORGE_API_KEY=replace_me

# Bearer token auth for non-browser callers (LLM proxy -> website gateway / MCP)
SMARTSPEC_WEB_GATEWAY_TOKEN=replace_me_gateway_token
SMARTSPEC_MCP_TOKEN=replace_me_mcp_token

# Rate limits (in-memory). For multi-instance, enforce at gateway/redis.
WEB_LLM_RPM=120
WEB_LLM_MAX_BODY_BYTES=2097152
WEB_MCP_RPM=240

# Workspace tools
WORKSPACE_ROOT=./workspace
MCP_EXT_ALLOWLIST=.md,.txt,.json,.yaml,.yml,.ts,.tsx,.js,.py,.css,.html
MCP_MAX_READ_BYTES=1048576
MCP_MAX_WRITE_BYTES=1048576
MCP_REQUIRE_WRITE_TOKEN=1
MCP_WRITE_TOKEN=replace_me_write_token
