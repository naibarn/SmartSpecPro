{
  "test_id": "05_error_missing_accessibility",
  "name": "Error: Missing Accessibility",
  "description": "Tests validation failure when accessibility information is missing",
  "category": "error_scenarios",
  "a2ui_version": "0.8",
  "expected_valid": false,
  "input": {
    "component": "button",
    "variant": "primary",
    "label": "Click Me"
  },
  "expected_output": {
    "version": "0.8",
    "type": "component",
    "component": {
      "type": "button",
      "id": "btn_001",
      "properties": {
        "variant": "primary",
        "label": "Click Me"
      }
    }
  },
  "expected_errors": [
    {
      "code": "MISSING_ACCESSIBILITY",
      "message": "Component is missing required accessibility object",
      "severity": "error",
      "path": "component.accessibility"
    }
  ],
  "validation_rules": [
    {
      "rule": "has_accessibility",
      "description": "Must have accessibility object",
      "should_fail": true
    }
  ],
  "metadata": {
    "created_at": "2025-12-22",
    "author": "SmartSpec Team",
    "tags": ["error", "accessibility", "validation"]
  }
}
